
<section class="section-home">
  <div class="container">
    <div class="row">
      <h4 class="page-header">Welcome back, <%= @user.email %>!</h4>
      <div class="col-md-3 section-part">
        <div class="center">
          <span class="round-image-100"><%= image_tag(@user.image(:thumb)) %></span>
          <h6 style="font-weight: bold"><%= @user.email %></h6>
          
          <br>
          <%= link_to "Add item", new_listing_path, class: "btn button-other"%>
          <% if (current_user != @user) %>
          <hr>
            <button type="button" name="button" class="btn button-default">Follow</button>
          <% end %>

          <hr>
          <h3>Shops</h3>
          display shops user has

        </div>
      </div>
      <div class="col-md-6 section-part">
        <h4>Shipping Information</h4>
        <p>
          Address:
        </p>
        <p>
          Phone:
        </p>
      </div>
      <% if (user_signed_in?) && (current_user == @user) %>
        <div class="col-md-3 section-part">
          <h5>Got any great stuff to sell?</h5><hr>

      <% end %>

    </div>
  </div>
</section>
