<div class="section-home clearfix" id="main-banner">
    <div class="home-banner">
      <div class="center"><br>
        <br>
        <h1 class="center">Buy directly from Ghana's emerging brands.</h1><br>

        <%= form_tag search_listings_path,  method: :get do |f| %>
          <div class="form-group has-feedback">
            <%= text_field_tag :search, nil, placeholder: "What are you shopping for today?", class: " form-control" %>
            <i class="fa fa-search fa-2x form-control-feedback"></i>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="section" id="overlap-top">
      <h3 class="section-header" style="text-align: center;">Shop by Department</h3>
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col-md-2">
            <div class="thumbnail">
              <%= link_to image_tag(category.image(:medium)), category %>
            </div>
            <div class="panel">
              <%= link_to category.name, category %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
