
<div class="section-home">
    <div class="home-banner"  id="main-banner">
      <div class="center"><br>
        <br>
        <h1 class="center">Buy directly from Ghana's emerging brands.</h1><br>
        <div class="container">
          <%= form_tag search_listings_path,  method: :get do |f| %>
            <div class="form-group has-feedback">
              <%= text_field_tag :search, nil, placeholder: "What are you shopping for today?", class: " form-control" %>
              <i class="fa fa-search fa-2x form-control-feedback"></i>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <h2 class="page-header">Shop by Category</h2>
      <div class="home-cat">
        <div class="row">
          <% @categories.each do |category| %>
            <div class="col-md-3">
              <div class="thumbnail">
                <%= link_to image_tag(category.image.url(:medium)), category %>
                <div class="caption">
                  <h3 class="cat-name"><%= link_to category.name, category %></h3>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
