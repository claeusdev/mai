<div class="section">
  <div class="container">
    <div class="row">
      <h3 class="page-header">Sold by <%= link_to @product.store.name, store_path(@store) %></h3>
      <div class="col-md-6">
        <div class="thumbnail">
          <%= image_tag @product.image(:large) %>
        </div>
      </div>
      <div class="col-md-6"><br>
        <span class="label label-success">
          <%=  @product.category.name %>
        </span><br ><br>
        <span class="label label-danger"><%= @product.id %></span>
        <h3><%= @product.name %></h3>
        <h4> <%= number_to_currency(@product.price) %></h4>
        <label>Description:</label>
        <p  class= "well item-desc "><%= @product.description%></p>
        <i class="fa fa-map-marker" aria-hidden="true" style="font-size: 1.5rem;"> <%= @product.location %></i><br><br>
        <button type="button" name="button" class="btn btn-primary">Contact Seller</button>
        
        <button type="button" name="button" class="btn btn-primary">Add to cart</button>


        <% if (user_signed_in?) && (current_user == @user) %>
          <%= link_to "Edit", edit_product_path(@product) %>
          <%= link_to 'Back', products_path %>
          <%= link_to "Delete", @product, method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
      <!-- <div class="col-md-2">
        <div class="section-part">

        </div>
      </div> -->

    <div class="col-md-12">
      <br><br>
      <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">Gallery</a></li>
        <li role="presentation"><a href="#">Review</a></li>
      </ul>
    </div>

  </div>
</div>
