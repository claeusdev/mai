
<h2 class="page-header">Purchase history</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Item</th>
    <th class="center">Price</th>
    <th class="center">Seller</th>
    <th class="center">Sold on</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td>
        <%= image_tag order.listing.image.url(:thumb) %>
      </td>
      <td><%= order.listing.name %></td>
      <td><%= order.listing.description %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.seller.username %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
