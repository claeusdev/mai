<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
    <small>Add a name to your item. eg. iPhone 7 32GB</small>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
    <small>Provide a very good description for your item. Remember good description attracts!</small>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {}, class: "form-control" %>
    <small>Select a category.</small>
  </div>
  <div class="form-group">
    <%= f.label :subcategory %><br>
    <%= f.select :subcategory_id, options_from_collection_for_select(Subcategory.all, :id, :name), {}, class: "form-control" %>
    <small>Select a category.</small>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control" %>
    <small>Add your item price per unit.</small>
  </div>
  <div class="form-group">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: "form-control" %>
    <small>Where are you selling this item from?</small>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
    <small>Where are you selling this item from?</small>
  </div>

  <div class="actions">
    <%= f.submit class: "button-other" %>
  </div>
<% end %>
