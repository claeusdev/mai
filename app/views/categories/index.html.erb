
<div class="container">
  <p id="notice"><%= notice %></p>
  <h3 class="page-header">All Categories</h3>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(category.image(:medium)), category %>
          <div class="caption">
            <%= link_to category.name, category %>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <br>
</div>


<%= link_to 'New Category', new_category_path %>
